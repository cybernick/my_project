<% provide(:title, 'Зарегестрироваться') %>
<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="row clearfix">
        <div class="col-md-4 column">
        </div>
        <div class="col-md-4 column">
        <h1>Зарегестрироваться</h1>
        <div class="row">
        	<div class="span6 offset3">
          		<div class="account-wall">   
        			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signup"} ) do |f| %>
          				<%= devise_error_messages! %>
          
                  <%= f.text_field :username,  class: 'form-control', autofocus: true, placeholder: 'Username'%><br />

          				<%= f.email_field :email,  class: 'form-control', autofocus: true, placeholder: 'Email' %><br />

          				<%= f.password_field :password,  class: 'form-control', autofocus: true, placeholder: 'Password'%><br />

          				<%= f.password_field :password_confirmation,  class: 'form-control', autofocus: true, placeholder: 'Password confirmation'%><br />

          				<%= f.submit "Зарегестрироваться"  ,class: "btn btn-large btn-primary"%>
                  <%= render "devise/shared/links" %>
        			<% end %>
        		</div>
        	</div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>


<% provide(:title, 'Sign in') %>
<h2>Sign in</h2>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin"} ) do |f| %>
  			<%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email' %></br>

  			<%= f.password_field :password,  class: 'form-control', autofocus: true, placeholder: 'Password'%></br>

  			<% if devise_mapping.rememberable? -%>
    			<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  			<% end -%>

  			<div><%= f.submit "Sign ins" ,class: "btn btn-large btn-primary" %></div>
		<% end %>
	</div>
</div>
<%= render "devise/shared/links" %>

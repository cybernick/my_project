<%= content_for(:title, @user.username) %>
<p>
	<label class="label"><%= t("activerecord.attributes.user.username", :default => t("activerecord.labels.username", :default => "Username")) %>:</label>
	<p><%= @user.username %></p>
</p>
<label class="label"><%= t("activerecord.attributes.user.email", :default => t("activerecord.labels.email", :default => "Email")) %>:</label>
<p><%= @user.email %></p>

<div class="form-actions">
<%= link_to "Back", admin_users_path, :class => 'btn'  %>
<%= link_to "Edit", edit_admin_user_path(@user), :class => 'btn' %>
<%= link_to "Delete", admin_user_path(@user), :method => "delete", :data => {:confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}, :class => 'btn' %>
</div>
